    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Node.js (Test)",
            "preLaunchTask": "npm",
            "program": "${workspaceFolder}/../__out/main.js",
            "cwd": "${workspaceFolder}/../test",
            "args": [
                "tsconfig.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TS-Node (Test)",
            "runtimeExecutable": "${workspaceFolder}/../node_modules/.bin/ts-node",
            "program": "${workspaceFolder}/../src/main.ts",
            "cwd": "${workspaceFolder}/../test",
            "args": [
                "tsconfig.json"
            ],
            "sourceMaps": true,
            "outFiles": [
              "${workspaceRoot}/../__out/**/*.js"
            ],
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Node.js (BabylonJS)",
            "preLaunchTask": "npm",
            "program": "${workspaceFolder}/../__out/main.js",
            "cwd": "C:\\Dev\\Gits\\Babylon.js\\src",
            "args": [
                "tsconfig.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/../node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "-r",
                "ts-node/register",
                "${workspaceFolder}/../spec/**/*.spec.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/../"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests - Single",
            "program": "${workspaceFolder}/../node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "-r",
                "ts-node/register",
                "${workspaceFolder}/../spec/**/number.spec.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/../"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests - Lang (STS)",
            "program": "${workspaceFolder}/../node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "-r",
                "ts-node/register",
                "${workspaceFolder}/../spec/**/lang.spec.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/../"
        }
    ]
}
